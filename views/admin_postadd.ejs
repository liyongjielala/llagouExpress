<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('templates/file') %>
</head>
<body>
    <%- include('templates/head')%>
    <div class="container-fluid">
        <div class="row" id="content">
        <%- include('templates/menu',{name:"职位添加"})%>
        
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
            <%- include('templates/breadcrumb',{name :[{link:'',value:'职位添加'}]})%>
            <div class="col-6 mb-5">
                <form action="/post/add" method="POST" enctype="multipart/form-data"> 
                    <div class="form-group">
                      <label >职位名称</label>
                      <input  class="form-control" name="postName">
                    </div>
                    <div class="form-group">
                        <label >职位地点</label>
                        <input class="form-control" name="postCity">
                      </div>
                    <div class="form-group">
                      <label >薪资范围</label>
                      <select id="exampleFormControlSelect1" class="form-control" name="postMoney">
                        <option value="不限">不限</option>
                        <option value="5k以上">5k以上</option>
                        <option value="5-10k">5-10k</option>
                        <option value="10-15k">10-15k</option>
                        <option value="15-25k">15-25k</option>
                        <option value="25以上">25以上</option>
                      </select>
                    </div>
                    <div class="form-group">
                        <label >工作年限</label>
                        <select class="form-control" id="exampleFormControlSelect1" name="postYear">
                          <option value="不限">不限</option>
                          <option value="一年以下">一年以下</option>
                          <option value="一到三年">一到三年</option>
                          <option value="三到五年">三到五年</option>
                          <option value="五年以上">五年以上</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label >学历要求</label>
                        <select class="form-control" id="exampleFormControlSelect1" name="postEdu">
                          <option value="不限">不限</option>
                          <option value="专科以上">专科以上</option>
                          <option value="本科以上">本科以上</option>
                          <option value="研究生以上">研究生以上</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label >公司名称</label>
                        <input class="form-control" name="companyName">
                    </div>
                    <div class="form-group">
                        <label class="btn btn-primary">公司Logo<input type="file" class="d-none" name="companyLogo" id="companyLogo"></label>
                        <img src=""  id= "companyImg" alt="" width="200">
                    </div>
                    <div class="form-group">
                      <label>职位信息</label>
                      <textarea class="form-control"  rows="7" name="postMessage"></textarea >
                    </div>
                    <div >
                        <input type="submit" class="btn btn-primary " value="添加" >
                    </div>
                  </form>
            </div>
        </main>
        </div>
    </div>

</body>
<script>
    $('#companyLogo').change(function(){
        var fileReader = new FileReader();
        fileReader.onload = function(e){   //读取成功触发的事件
            $('#companyImg').attr('src', e.target.result );
        };
        var imageFile = this.files[0];  //找到上传的文件
        fileReader.readAsDataURL(imageFile);  //读取这个文件的信息
    });
</script>

</html>